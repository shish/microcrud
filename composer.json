{
    "name": "shish/microcrud",
    "type": "library",
    "description": "A minimal CRUD generating library",
    "keywords": [
        "generator",
        "crud"
    ],
    "homepage": "https://github.com/shish/microcrud",
    "license": "MIT",
    "authors": [
        {
            "name": "Shish",
            "email": "webmaster@shishnet.org",
            "homepage": "http://shishnet.org",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "shish/ffsphp": "^1.0",
        "shish/microhtml": "^2.0.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MicroCRUD\\": "src"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage phpunit --coverage-text",
        "format": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix",
        "analyse": "phpstan analyse"
    }
}
